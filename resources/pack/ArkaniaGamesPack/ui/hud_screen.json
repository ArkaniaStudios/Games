{
    "namespace": "hud",
    "anim_push_start": {
        "anim_type": "offset",
        "easing": "out_cubic",
        "duration": 1.0,
        "from": [
            900,
            -248
        ],
        "to": [
            226,
            -248
        ],
        "next": "@hud.anim_wait"
    },
    "anim_wait": {
        "anim_type": "wait",
        "duration": 1.9,
        "next": "@hud.anim_push_exit"
    },
    "anim_push_exit": {
        "anim_type": "offset",
        "easing": "in_cubic",
        "duration": 0.7,
        "from": [
            226,
            -248
        ],
        "to": [
            900,
            -248
        ]
    },
    "hud_actionbar_text": {
        "type": "panel",
        "controls": [
            {
                "popUp_hud_actionbar_text": {
                    "type": "image",
                    "alpha": 0.6,
                    "size": [
                        "100%c + 12px",
                        "100%c + 20px"
                    ],
                    "offset": "@hud.anim_push_start",
                    "texture": "textures/ui/popup",
                    "controls": [
                        {
                            "actionbar_message": {
                                "type": "label",
                                "size": [
                                    "default",
                                    "default"
                                ],
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "color": "$tool_tip_text",
                                "layer": 31,
                                "text": "$actionbar_text",
                                "localize": false
                            }
                        }
                    ]
                }
            }
        ]
    }
}